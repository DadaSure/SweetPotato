.titleContainer{
  margin-top: 4px;
  margin-bottom: 12px;
  margin-left: 16px;
  margin-right: 16px;
  width: auto;
  display: flex;
  justify-content: space-between;
  height: 40px;
  vertical-align: center;
}
.pageTitle{
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 34px;
  font-weight: bold;
  color: #FF9746;
  width: 30%;
  position: relative;
  top: -3px;
}
.contentContainer{
  margin-left: 16px;
  margin-right: 16px;
  display: flex;
  align-content: flex-start;
  width: auto;
  flex-wrap: wrap;
}
.avatar{
  width: 96px;
  margin-top: 53px;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  border-radius: 50%;
}
.nickname{
  width: 100%;

  margin-top: 12px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 17px;
  text-align: center
}

